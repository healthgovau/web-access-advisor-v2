# OpenAI Configuration (for auto-playwright only)
OPENAI_API_KEY=your_openai_api_key_here

# Gemini Configuration (for accessibility analysis)
GEMINI_API_KEY=your_gemini_api_key_here

# LLM Analysis Filtering Configuration
# Control whether to filter out authentication/login content from analysis (removes scripts, styles, auth pages, etc.)
FILTER_AUTH_CONTENT=true

# Token allocation for Gemini prompts (based on ~2M token limit)
# HTML snapshot size limit for screen reader analysis (in bytes, default 1MB)
MAX_SCREEN_READER_HTML_SIZE=1048576

# Axe results size limit for accessibility analysis (in bytes, default 1MB)
MAX_AXE_RESULTS_SIZE=1048576

# Application Configuration
VITE_APP_NAME=Web Access Advisor
VITE_APP_VERSION=2.0.0

# API Server Configuration
VITE_API_BASE_URL=http://localhost:3002
API_PORT=3002

# Development Configuration
NODE_ENV=development

# Browser Configuration (for debugging)
# Set to 'false' to make browser visible during replay/analysis
PLAYWRIGHT_HEADLESS=true
# Set delay in milliseconds between browser actions (useful for debugging)
PLAYWRIGHT_SLOW_MO=0
